FROM node:14.16.0 as build

WORKDIR /app
ARG git_personal_token
RUN git config --global url."https://$git_personal_token:@github.com/".insteadOf " https://github.com/"
RUN git clone https://$git_personal_token@github.com/secureailabs/Web-Development
RUN mv -v Web-Development/* .
RUN rm -rf Web-Development
RUN yarn --cwd client install
RUN yarn --cwd client build
RUN yarn --cwd server install
RUN chmod +x /app/env.sh

EXPOSE 3000

CMD ["/bin/bash", "-c", "/app/env.sh && yarn --cwd /app/server prod && /bin/bash"]
